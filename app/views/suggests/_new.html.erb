<% provide :button_text, t(".add") %>
<div class="modal fade new-product-modal" tabindex="-1" role="
  dialog"
  aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
          aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center"><%= t "new_product" %></h4>
      </div>
        <%= form_for @product, multipart: true, authenticity_token: true, remote: true do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :category %>
              <%= f.select "category_id", options_for_select(@categories.collect{
                |category| [category.name, category.id]}),
                class: "btn btn-default filter-categories" %>
            </div>
            <div class="form-group">
              <%= f.label :quanty %>
              <%= f.number_field :quanty, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :price %>
              <%= f.number_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label :image %>
                <%= f.file_field :image, autofocus: true %>
              </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit yield(:button_text), class: "btn btn-primary", id: "btn-submit" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
