<% provide :title, (t ".allproduct") %>
<h1><%= t ".allproduct" %></h1>
<div>
  <button type="button" class="btn btn-primary" data-toggle="modal"
    data-target=".new-product-modal"><%= t "new" %></button>
</div>
<br/>
<table id="products-table", data-source="<%= admin_products_path(format: :json) %>">
  <thead>
    <tr>
      <th><%= t ".image" %></th>
      <th><%= t ".name" %></th>
      <th><%= t ".category" %></th>
      <th><%= t ".price" %>/th>
      <th><%= t ".quantity" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".destroy" %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<%= render "new" %>
