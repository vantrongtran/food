  <button type="button" class="btn btn-primary" data-toggle="modal"
    data-target=".new-category-modal"><%= t "new" %></button>
</div>
<br/>
<table id="categories-table",
  data-source="<%= admin_categories_path(format: :json) %>">
  <thead>
    <tr>
      <th><%= t ".name" %></th>
      <th><%= t ".desciption" %></th>
      <th><%= t ".products" %></th>
      <th><%= t ".edit" %></th>
      <th><%= t ".delete" %></th>
    </tr>
  </thead>
  <tbody>
  </tbody>
</table>
<%= render "new" %>
